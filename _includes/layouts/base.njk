<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200;300;400;500;600;700;800;900&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ 'https://cdn.jsdelivr.net/gh/prismjs/prism-themes/themes/prism-a11y-dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <!--START Analytics by Umami-->
    <script async defer data-website-id="e8fcc526-6d15-49b7-9262-2f1def295243" src="https://umami--6.herokuapp.com/umami.js" data-do-not-track="true"></script>
    <!--END Analytics by Umami-->
  </head>
  <body>
    <header>
      <a href="#main-content" class="skip-link">Skip to main content</a>
      <h2 class="header-button home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <nav class="nav-top">
        <ul class="ulnav">
          <li><a href="{{ '/about/' | url }}" class="home">about</a></li> 
          <li><a href="{{ '/blog/' | url }}" class="home">archives</a></li>
          <li><a href="{{ '/feed/atom.xml' | url }}" class="home">feed</a></li>
        </ul>  
      </nav>  
    </header>

    <main id="main-content">
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
